local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()

local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")

-- UI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SpawnerUI"
ScreenGui.Parent = PlayerGui
ScreenGui.ResetOnSpawn = false

local Main = Instance.new("Frame")
Main.Size = UDim2.new(0, 350, 0, 420)
Main.Position = UDim2.new(0.5, -175, 0.5, -210)
Main.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
Main.BorderSizePixel = 0
Main.Parent = ScreenGui
Main.Active = true
Main.Draggable = true

local UICorner = Instance.new("UICorner", Main)
UICorner.CornerRadius = UDim.new(0, 10)

local function createLabel(text, parent, size, pos)
	local lbl = Instance.new("TextLabel")
	lbl.Text = text
	lbl.Size = size
	lbl.Position = pos
	lbl.BackgroundTransparency = 1
	lbl.TextColor3 = Color3.fromRGB(220, 220, 255)
	lbl.Font = Enum.Font.Gotham
	lbl.TextSize = 14
	lbl.TextXAlignment = Enum.TextXAlignment.Left
	lbl.Parent = parent
	return lbl
end

-- Fake Username Generator
local function generateUsername()
	local adjectives = {"Shy", "Fast", "Cool", "Happy", "Dark", "Chill", "Smart", "Epic"}
	local nouns = {"Fox", "Wolf", "Raccoon", "Coder", "Scripter", "Player", "Dragon"}
	return adjectives[math.random(#adjectives)] .. nouns[math.random(#nouns)] .. tostring(math.random(10, 99))
end

-- Online Counter
local counter = createLabel("Online: " .. math.random(10000, 20000), Main, UDim2.new(0, 160, 0, 25), UDim2.new(0, 180, 0, 10))
counter.TextXAlignment = Enum.TextXAlignment.Right

-- Inputs
local nameBox = Instance.new("TextBox")
nameBox.PlaceholderText = "Pet Name"
nameBox.Size = UDim2.new(0, 320, 0, 30)
nameBox.Position = UDim2.new(0, 15, 0, 50)
nameBox.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
nameBox.TextColor3 = Color3.fromRGB(255, 255, 255)
nameBox.Font = Enum.Font.Gotham
nameBox.TextSize = 14
nameBox.Parent = Main
Instance.new("UICorner", nameBox).CornerRadius = UDim.new(0, 6)

local weightBox = nameBox:Clone()
weightBox.PlaceholderText = "Weight (kg)"
weightBox.Position = UDim2.new(0, 15, 0, 90)
weightBox.Text = ""
weightBox.Parent = Main

local ageBox = nameBox:Clone()
ageBox.PlaceholderText = "Age"
ageBox.Position = UDim2.new(0, 15, 0, 130)
ageBox.Text = ""
ageBox.Parent = Main

-- Notification
local function createNotification(username, pet)
	local note = Instance.new("TextLabel")
	note.Text = username .. " spawned a " .. pet .. "!"
	note.Size = UDim2.new(0, 300, 0, 30)
	note.Position = UDim2.new(0.5, -150, 1, -40)
	note.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
	note.TextColor3 = Color3.fromRGB(255, 255, 255)
	note.Font = Enum.Font.GothamSemibold
	note.TextSize = 14
	note.Parent = ScreenGui
	Instance.new("UICorner", note).CornerRadius = UDim.new(0, 8)
	TweenService:Create(note, TweenInfo.new(0.5), {Position = UDim2.new(0.5, -150, 1, -80)}):Play()
	task.delay(3, function()
		TweenService:Create(note, TweenInfo.new(0.5), {Position = UDim2.new(0.5, -150, 1, 20)}):Play()
		task.wait(0.6)
		note:Destroy()
	end)
end

-- Buttons
local function createButton(text, yPos)
	local btn = Instance.new("TextButton")
	btn.Text = text
	btn.Size = UDim2.new(0, 320, 0, 36)
	btn.Position = UDim2.new(0, 15, 0, yPos)
	btn.BackgroundColor3 = Color3.fromRGB(80, 160, 80)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 14
	btn.Parent = Main
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
	return btn
end

-- Spawn Pet
local spawnPetBtn = createButton("Spawn Pet", 180)
spawnPetBtn.MouseButton1Click:Connect(function()
	local petName = nameBox.Text ~= "" and nameBox.Text or "Unknown Pet"
	local kg = tonumber(weightBox.Text) or 1
	local age = tonumber(ageBox.Text) or 1
	Spawner.SpawnPet(petName, kg, age)
	createNotification(generateUsername(), petName)
end)

-- Spawn Seed
local spawnSeedBtn = createButton("Spawn Seed (Candy Blossom)", 230)
spawnSeedBtn.MouseButton1Click:Connect(function()
	Spawner.SpawnSeed("Candy Blossom")
	createNotification(generateUsername(), "Candy Blossom Seed")
end)

-- Spawn Egg
local spawnEggBtn = createButton("Spawn Egg (Night Egg)", 280)
spawnEggBtn.MouseButton1Click:Connect(function()
	Spawner.SpawnEgg("Night Egg")
	createNotification(generateUsername(), "Night Egg")
end)

-- Spin Plant
local spinBtn = createButton("Spin Plant (Sunflower)", 330)
spinBtn.MouseButton1Click:Connect(function()
	Spawner.Spin("Sunflower")
	createNotification(generateUsername(), "Sunflower Spin")
end)
