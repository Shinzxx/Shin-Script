KgInput.Position = UDim2.new(0, 20, 0, 90)
KgInput.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
KgInput.TextColor3 = Color3.fromRGB(255, 255, 255)
KgInput.Font = Enum.Font.Gotham
KgInput.TextSize = 14
KgInput.Parent = MainFrame

local AgeInput = Instance.new("TextBox")
AgeInput.PlaceholderText = "Age"
