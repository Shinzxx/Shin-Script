local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")

local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()

-- UI Container
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetSpawnerUI"
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

-- UIScale for mobile
local uiScale = Instance.new("UIScale")
uiScale.Scale = 1
uiScale.Parent = screenGui

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.5, 0, 0.4, 0)
mainFrame.Position = UDim2.new(0.25, 0, 0.3, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Name = "MainFrame"

-- UICorner for rounded look
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = mainFrame

-- Online Users Text
local userCount = Instance.new("TextLabel")
userCount.Size = UDim2.new(1, -10, 0, 30)
userCount.Position = UDim2.new(0, 5, 0, 5)
userCount.Text = "Online Users: " .. tostring(math.random(550, 700))
userCount.TextColor3 = Color3.fromRGB(100, 255, 100)
userCount.BackgroundTransparency = 1
userCount.TextXAlignment = Enum.TextXAlignment.Left
userCount.Font = Enum.Font.SourceSansBold
userCount.TextSize = 18
userCount.Parent = mainFrame

-- Minimize Button
local minimizeBtn = Instance.new("TextButton")
minimizeBtn.Text = "-"
minimizeBtn.Size = UDim2.new(0, 30, 0, 30)
minimizeBtn.Position = UDim2.new(1, -35, 0, 5)
minimizeBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
minimizeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
minimizeBtn.Font = Enum.Font.SourceSansBold
minimizeBtn.TextSize = 20
minimizeBtn.Parent = mainFrame

-- Info Labels & Inputs
local function createLabel(text, y)
    local label = Instance.new("TextLabel")
    label.Text = text
    label.Size = UDim2.new(0.9, 0, 0, 25)
    label.Position = UDim2.new(0.05, 0, y, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Font = Enum.Font.SourceSans
    label.TextSize = 18
    label.Parent = mainFrame
    return label
end

local function createInput(y)
    local input = Instance.new("TextBox")
    input.Size = UDim2.new(0.9, 0, 0, 30)
    input.Position = UDim2.new(0.05, 0, y, 0)
    input.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    input.TextColor3 = Color3.new(1, 1, 1)
    input.Font = Enum.Font.SourceSans
    input.TextSize = 18
    input.Text = ""
    input.PlaceholderText = "Enter..."
    input.ClearTextOnFocus = false
    input.Parent = mainFrame
    return input
end

createLabel("Pet Name:", 0.18)
local petInput = createInput(0.25)
createLabel("Weight (KG):", 0.38)
local weightInput = createInput(0.45)
createLabel("Age:", 0.58)
local ageInput = createInput(0.65)

-- Buttons
local function createButton(text, y, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0.9, 0, 0, 35)
    button.Position = UDim2.new(0.05, 0, y, 0)
    button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Text = text
    button.Font = Enum.Font.SourceSansBold
    button.TextSize = 18
    button.Parent = mainFrame
    button.MouseButton1Click:Connect(callback)
    return button
end

createButton("Spawn Pet", 0.80, function()
    local name = petInput.Text ~= "" and petInput.Text or "Raccoon"
    local weight = tonumber(weightInput.Text) or 1
    local age = tonumber(ageInput.Text) or 2
    Spawner.SpawnPet(name, weight, age)
end)

createButton("Spawn Seed", 0.87, function()
    local seedList = Spawner.GetSeeds()
    Spawner.SpawnSeed(seedList[math.random(1, #seedList)])
end)

createButton("Place Egg", 0.94, function()
    local eggList = Spawner.GetEggs()
    Spawner.SpawnEgg(eggList[math.random(1, #eggList)])
end)

-- Minimize Toggle
local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    for _, child in ipairs(mainFrame:GetChildren()) do
        if child:IsA("TextLabel") or child:IsA("TextButton") or child:IsA("TextBox") then
            if child ~= minimizeBtn and child ~= userCount then
                child.Visible = not minimized
            end
        end
    end
end)
