-- Generate realistic 2025 username
local function generateRealisticUsername()
	local usernameType = math.random(1, 5)
	local nameList = usernameType == 1 and usernameData.western
		or usernameType == 2 and usernameData.japanese
		or usernameType == 3 and usernameData.filipino
		or usernameType == 4 and usernameData.otherAsian
		or usernameData.special

	local baseName = nameList[math.random(1, #nameList)]

	-- Add numbers/suffixes (common in 2025)
	if math.random(1, 100) <= 70 then  -- 70% chance to add numbers
		local numbers = math.random(1, 100) <= 30 and tostring(math.random(2005, 2025))  -- Year
			or tostring(math.random(1, 999))  -- Random numbers

		-- Different number formats
		if math.random(1, 100) <= 40 then
			return baseName .. numbers
		else
			return baseName .. "_" .. numbers
		end
	end

	return baseName
end

-- ========== ANIMATED NOTIFICATION SYSTEM ==========
local function createNotification(username, petName, weight, age)
	local notificationFrame = Instance.new("Frame")
	notificationFrame.Name = "Notification"
	notificationFrame.Size = UDim2.new(1, 0, 0, 60)
	notificationFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
	notificationFrame.BackgroundTransparency = 1
	notificationFrame.Position = UDim2.new(0, 0, 0, 10)
	notificationFrame.Parent = SpawnedListScrolling

	local UICorner = Instance.new("UICorner")
	UICorner.CornerRadius = UDim.new(0, 5)
	UICorner.Parent = notificationFrame

	-- Username Label
	local userLabel = Instance.new("TextLabel")
	userLabel.Name = "UserLabel"
	userLabel.Size = UDim2.new(1, -10, 0, 20)
	userLabel.Position = UDim2.new(0, 5, 0, 5)
	userLabel.BackgroundTransparency = 1
	userLabel.Text = "User: " .. username
	userLabel.TextColor3 = Color3.fromRGB(180, 220, 255)
	userLabel.TextXAlignment = Enum.TextXAlignment.Left
	userLabel.Font = Enum.Font.GothamSemibold
	userLabel.TextSize = 12
	userLabel.TextTransparency = 1
	userLabel.Parent = notificationFrame

	-- Pet Info Label
	local petLabel = Instance.new("TextLabel")
	petLabel.Name = "PetLabel"
	petLabel.Size = UDim2.new(1, -10, 0, 20)
	petLabel.Position = UDim2.new(0, 5, 0, 25)
	petLabel.BackgroundTransparency = 1
	petLabel.Text = "Spawned: " .. petName .. " (" .. string.format("%.1f", weight) .. "kg, " .. age .. "yrs)"
	petLabel.TextColor3 = Color3.fromRGB(220, 220, 180)
	petLabel.TextXAlignment = Enum.TextXAlignment.Left
	petLabel.Font = Enum.Font.Gotham
	petLabel.TextSize = 12
	petLabel.TextTransparency = 1
	petLabel.Parent = notificationFrame

	-- Time Label
	local timeLabel = Instance.new("TextLabel")
	timeLabel.Name = "TimeLabel"
	timeLabel.Size = UDim2.new(1, -10, 0, 15)
	timeLabel.Position = UDim2.new(0, 5, 0, 45)
	timeLabel.BackgroundTransparency = 1
	timeLabel.Text = "Just now"
	timeLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
	timeLabel.TextXAlignment = Enum.TextXAlignment.Left
	timeLabel.Font = Enum.Font.Gotham
	timeLabel.TextSize = 10
	timeLabel.TextTransparency = 1
	timeLabel.Parent = notificationFrame

	-- Animate entry
	local fadeIn = TweenService:Create(
		notificationFrame,
		TweenInfo.new(0.4, Enum.EasingStyle.Quad),
		{BackgroundTransparency = 0}
	)

	local textFadeIn = TweenService:Create(
		userLabel,
		TweenInfo.new(0.4, Enum.EasingStyle.Quad),
		{TextTransparency = 0}
	)

	local petFadeIn = TweenService:Create(
		petLabel,
		TweenInfo.new(0.4, Enum.EasingStyle.Quad),
		{TextTransparency = 0}
	)

	local timeFadeIn = TweenService:Create(
		timeLabel,
		TweenInfo.new(0.4, Enum.EasingStyle.Quad),
		{TextTransparency = 0}
	)

	fadeIn:Play()
	textFadeIn:Play()
	petFadeIn:Play()
	timeFadeIn:Play()

	-- Gentle sway animation
	local swayConnection
	swayConnection = RunService.Heartbeat:Connect(function()
		local offset = math.sin(os.clock() * 2.5) * 1.5  -- Gentle sway
		notificationFrame.Position = UDim2.new(offset/50, 0, 0, 0)
	end)

	-- Clean up when destroyed
	notificationFrame.Destroying:Connect(function()
		swayConnection:Disconnect()
	end)

	-- Auto-remove if too many
	if #SpawnedListScrolling:GetChildren() > 20 then
		local oldest = SpawnedListScrolling:GetChildren()[2]
		if oldest then
			local fadeOut = TweenService:Create(
				oldest,
				TweenInfo.new(0.3),
				{BackgroundTransparency = 1, Position = UDim2.new(0, 0, 0, -20)}
			)

			fadeOut:Play()
			fadeOut.Completed:Connect(function()
				oldest:Destroy()
			end)
		end
	end
end

-- ========== SPAWN BUTTON FUNCTIONALITY ==========
SpawnButton.MouseButton1Click:Connect(function()
	local petName = PetNameInput.Text
	local weight = tonumber(KgInput.Text) or 0
	local age = tonumber(AgeInput.Text) or 0

	if petName == "" then
		petName = "Unknown Pet"
	end

	createNotification(Player.Name, petName, weight, age)

	-- Here you would add your actual pet spawning logic
	-- game:GetService("ReplicatedStorage").SpawnPet:FireServer(petName, weight, age)
end)

-- ========== AUTO-GENERATE REALISTIC SPAWNS ==========
local petTypes = {
	"Kitsune", "Raccoon", "Disco Bee", "Corrupted Kitsune", "Raiju",
	"T-Rex", "Spinosaurus", "Dragonfly", "Butterfly", "Mimic Octopus",
	"Queen Bee"
}

local function generateRandomSpawns()
	while true do
		wait(math.random(2, 5))  -- Random interval between spawns

		local username = generateRealisticUsername()
		local pet = petTypes[math.random(1, #petTypes)]
		local weight = math.random(10, 5000)/10  -- 1.0 to 500.0 kg
		local age = math.random(1, 100)

		createNotification(username, pet, weight, age)
	end
end

-- Start generating random spawns
coroutine.wrap(generateRandomSpawns)()

-- ========== WINDOW DRAGGING ==========
local dragging = false
local dragStart, startPos

MainFrame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position

		local connection
		connection = input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
				connection:Disconnect()
			end
		end)
	end
end)

MainFrame.InputChanged:Connect(function(input)
	if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		MainFrame.Position = UDim2.new(
			startPos.X.Scale, startPos.X.Offset + delta.X,
			startPos.Y.Scale, startPos.Y.Offset + delta.Y
		)
	end
end)

-- Close button functionality
CloseButton.MouseButton1Click:Connect(function()
	ScreenGui:Destroy()
end)

-- Update active users counter
local function updateUserCount()
	while true do
		local base = 120000
		local fluctuation = math.random(-15000, 20000)
		local count = base + fluctuation

		ActiveUsers.Text = "Online: " .. string.format("%.1f", count/1000) .. "K"
		wait(math.random(10, 20))
	end
end

coroutine.wrap(updateUserCount)()
