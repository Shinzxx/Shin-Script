-- Username Generator
local usernameData = {
	western = { "xProGamer", "ShadowSlayer", "EpicBuilder" },
	japanese = { "ÈæçÁ•û_Ryujin", "Ê°ú_Sakura", "ÂøçËÄÖ_Ninja" },
	filipino = { "Pogiako", "GandaMoNaman", "LodiTol" },
	otherAsian = { "XiaoLong", "WeiWei", "Kimchi" },
	special = { "‚òÖDarkKnight‚òÖ", "~Fluffy~", "‚ö°Speedster‚ö°" }
}

local function generateRealisticUsername()
	local types = {"western", "japanese", "filipino", "otherAsian", "special"}
	local category = usernameData[types[math.random(1, #types)]]
	local baseName = category[math.random(1, #category)]
	if math.random() < 0.7 then
		local suffix = math.random() < 0.3 and tostring(math.random(2005, 2025)) or tostring(math.random(1, 999))
		return math.random() < 0.4 and baseName .. suffix or baseName .. "_" .. suffix
	end
	return baseName
end

-- Notification Logic
local function createNotification(username, petName, weight, age)
	local notif = Instance.new("Frame")
	notif.Name = "Notification"
	notif.Size = UDim2.new(1, 0, 0, 60)
	notif.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
	notif.BackgroundTransparency = 1
	notif.LayoutOrder = -tick()
	notif.Parent = ScrollFrame

	local UICorner = Instance.new("UICorner")
	UICorner.CornerRadius = UDim.new(0, 6)
	UICorner.Parent = notif

	local userLabel = Instance.new("TextLabel")
	userLabel.Text = "User: " .. username
	userLabel.Size = UDim2.new(1, -30, 0, 18)
	userLabel.Position = UDim2.new(0, 5, 0, 5)
	userLabel.TextColor3 = Color3.fromRGB(180, 220, 255)
	userLabel.Font = Enum.Font.GothamSemibold
	userLabel.BackgroundTransparency = 1
	userLabel.TextSize = 12
	userLabel.TextXAlignment = Enum.TextXAlignment.Left
	userLabel.Parent = notif

	local petLabel = Instance.new("TextLabel")
	petLabel.Text = "Spawned: " .. petName .. " (" .. string.format("%.1f", weight) .. "kg, " .. age .. "yrs)"
	petLabel.Size = UDim2.new(1, -10, 0, 18)
	petLabel.Position = UDim2.new(0, 5, 0, 25)
	petLabel.TextColor3 = Color3.fromRGB(220, 220, 180)
	petLabel.Font = Enum.Font.Gotham
	petLabel.BackgroundTransparency = 1
	petLabel.TextSize = 12
	petLabel.TextXAlignment = Enum.TextXAlignment.Left
	petLabel.Parent = notif

	local timeLabel = Instance.new("TextLabel")
	timeLabel.Text = "Just now"
	timeLabel.Size = UDim2.new(1, -10, 0, 12)
	timeLabel.Position = UDim2.new(0, 5, 0, 44)
	timeLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
	timeLabel.Font = Enum.Font.Gotham
	timeLabel.BackgroundTransparency = 1
	timeLabel.TextSize = 10
	timeLabel.TextXAlignment = Enum.TextXAlignment.Left
	timeLabel.Parent = notif

	local closeButton = Instance.new("TextButton")
	closeButton.Text = "‚úï"
	closeButton.Size = UDim2.new(0, 20, 0, 20)
	closeButton.Position = UDim2.new(1, -25, 0, 5)
	closeButton.BackgroundTransparency = 1
	closeButton.TextColor3 = Color3.fromRGB(255, 100, 100)
	closeButton.Font = Enum.Font.GothamBold
	closeButton.TextSize = 14
	closeButton.Parent = notif

	closeButton.MouseButton1Click:Connect(function()
		TweenService:Create(notif, TweenInfo.new(0.3), {BackgroundTransparency = 1, Position = UDim2.new(0, 0, 0, -20)}):Play()
		task.delay(0.3, function() notif:Destroy() end)
	end)

	TweenService:Create(notif, TweenInfo.new(0.3), {BackgroundTransparency = 0}):Play()
	ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, UIList.AbsoluteContentSize.Y + 10)

	local sway = RunService.Heartbeat:Connect(function()
		if notif.Parent then
			notif.Position = UDim2.new(math.sin(tick() * 2.5) * 0.01, 0, 0, 0)
		end
	end)
	notif.Destroying:Connect(function() sway:Disconnect() end)
end

-- Manual Spawn
SpawnButton.MouseButton1Click:Connect(function()
	local pet = PetName.Text ~= "" and PetName.Text or "MysteryPet"
	local weight = tonumber(WeightSlider.Text) or math.random(10, 300) / 10
	local age = tonumber(AgeSlider.Text) or math.random(1, 50)
	local username = generateRealisticUsername()
	createNotification(username, pet, weight, age)
end)

-- Auto Spawn
local petTypes = {"Kitsune", "Raccoon", "Disco Bee", "Corrupted Kitsune", "Raiju", "T-Rex", "Spinosaurus", "Dragonfly", "Butterfly", "Mimic Octopus", "Queen Bee"}
coroutine.wrap(function()
	while true do
		task.wait(math.random(2, 4))
		local username = generateRealisticUsername()
		local pet = petTypes[math.random(1, #petTypes)]
		local weight = math.random(10, 5000) / 10
		local age = math.random(1, 100)
		createNotification(username, pet, weight, age)
	end
end)()

