SpawnButton.Text = "Spawn Pet"
SpawnButton.Size = UDim2.new(0, 180, 0, 40)
SpawnButton.Position = UDim2.new(0, 20, 0, 180)
SpawnButton.BackgroundColor3 = Color3.fromRGB(70, 130, 100)
