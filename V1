local SpawnCorner = Instance.new("UICorner")
SpawnCorner.CornerRadius = UDim.new(0, 6)
SpawnCorner.Parent = SpawnButton

-- Fake Username Generator
local usernames = { "LeafyFox", "BerryBuddy", "GrowerKid", "SoilMaster", "PetFarmer", "Sunshine123", "NatureNate" }

function getRandomUsername()
	return usernames[math.random(1, #usernames)]
end

-- Online Counter (Fake)
local OnlineCounter = Instance.new("TextLabel")
OnlineCounter.Text = "Online: " .. math.random(5, 50)
OnlineCounter.Size = UDim2.new(0, 120, 0, 20)
OnlineCounter.Position = UDim2.new(1, -130, 0, 5)
OnlineCounter.BackgroundTransparency = 1
OnlineCounter.TextColor3 = Color3.fromRGB(200, 200, 200)
OnlineCounter.Font = Enum.Font.Gotham
OnlineCounter.TextSize = 14
OnlineCounter.TextXAlignment = Enum.TextXAlignment.Right
OnlineCounter.Parent = TitleBar

-- Notification Holder
local NotificationHolder = Instance.new("Frame")
NotificationHolder.Name = "NotificationHolder"
NotificationHolder.Size = UDim2.new(1, 0, 0, 30)
NotificationHolder.Position = UDim2.new(0, 0, 0, 0)
NotificationHolder.BackgroundTransparency = 1
NotificationHolder.Parent = ScreenGui

-- Notification Function
function createNotification(username, petName, weight, age)
	local notif = Instance.new("TextLabel")
	notif.Size = UDim2.new(0, 300, 0, 24)
	notif.Position = UDim2.new(0, 10, 0, -30)
	notif.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	notif.TextColor3 = Color3.fromRGB(255, 255, 255)
	notif.Font = Enum.Font.GothamSemibold
	notif.TextSize = 14
	notif.Text = username .. " spawned a " .. petName .. " (" .. weight .. "kg, Age " .. age .. ")"
	notif.BorderSizePixel = 0
	notif.Parent = NotificationHolder

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 6)
	corner.Parent = notif

	local tweenIn = TweenService:Create(notif, TweenInfo.new(0.5), { Position = UDim2.new(0, 10, 0, 10) })
	local tweenOut = TweenService:Create(notif, TweenInfo.new(0.5), { Position = UDim2.new(0, 10, 0, -30) })

	tweenIn:Play()
	task.delay(2.5, function()
		tweenOut:Play()
		game.Debris:AddItem(notif, 3)
	end)
end

-- Spawn Button Logic
SpawnButton.MouseButton1Click:Connect(function()
	local petName = PetNameInput.Text
	local weight = tonumber(KgInput.Text) or 0
	local age = tonumber(AgeInput.Text) or 0

	if petName == "" then
		petName = "Unknown Pet"
	end

	Spawner.SpawnPet(petName, weight, age)
	createNotification(getRandomUsername(), petName, weight, age)
end)

-- Drag Functionality
local dragging, dragInput, dragStart, startPos

TitleBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

TitleBar.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		local delta = input.Position - dragStart
		MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)
